<% if flash[:errors] || flash[:notice] %>
<section class='headline'>
  <% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, there were the following problems with the form.
    <ul id="errors">
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</section>
<% end %>
